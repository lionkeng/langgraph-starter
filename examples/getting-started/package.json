{
  "name": "node-typescript-template",
  "version": "1.0.0",
  "description": "a simple nodeJS typescript template",
  "main": "main.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "inherits": [
    "build-tool/package.common.json"
  ],
  "scripts": {
    "build": "npx tsc",
    "build-swc": "npx swc src -d dist",
    "start": "node -r tsconfig-paths/register -r dotenv/config dist/main.js",
    "dev": "tsx --experimental-wasm-modules -r dotenv/config src/main.ts"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:lionkeng/node-typescript-template.git"
  },
  "keywords": [
    "nodeJS",
    "typescript",
    "template"
  ],
  "author": "lionkeng@gmail.com",
  "license": "LGPL-3.0-or-later",
  "devDependencies": {
    "@swc/cli": "*",
    "@swc/core": "*",
    "@swc/helpers": "*",
    "@tsconfig/node18": "*",
    "@types/node": "*",
    "dotenv": "*",
    "regenerator-runtime": "*",
    "ts-node": "*",
    "tsconfig-paths": "*",
    "tsx": "*",
    "typescript": "*"
  },
  "peerDependencies": {
    "@langchain/core": "*",
    "@langchain/langgraph": "*",
    "@langchain/openai": "*"
  }
}
